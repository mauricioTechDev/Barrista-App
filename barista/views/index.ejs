                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Login</button>
        </form>
      </section>
      <section>
        <h1>CAFE COLOMBIA</h1>
      </section>
    </header>
    <section>
      <form class="orderInput" action="/order" method="POST">
        <input type="text" name="customer" placeholder="Name of Customer">
        <input type="text" name="drink" placeholder="Order">
        <button type="submit" name="button">Place Order</button>
      </form>
    </section>
  </body>
</html>
